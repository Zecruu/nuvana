<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#16213e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f3460;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#5200ff;stop-opacity:0.8" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="400" fill="url(#grad1)"/>
  
  <!-- Language symbols -->
  <circle cx="200" cy="150" r="80" fill="url(#grad2)" opacity="0.2"/>
  <circle cx="600" cy="150" r="80" fill="url(#grad2)" opacity="0.2"/>
  
  <!-- EN/ES indicators -->
  <text x="200" y="160" font-family="Arial, sans-serif" font-size="36" font-weight="bold" text-anchor="middle" fill="#00d4ff">EN</text>
  <text x="600" y="160" font-family="Arial, sans-serif" font-size="36" font-weight="bold" text-anchor="middle" fill="#5200ff">ES</text>
  
  <!-- Connection line -->
  <line x1="280" y1="150" x2="520" y2="150" stroke="url(#grad2)" stroke-width="4" opacity="0.6"/>
  
  <!-- Globe icon representation -->
  <circle cx="400" cy="150" r="40" fill="none" stroke="url(#grad2)" stroke-width="3" opacity="0.8"/>
  <path d="M 360 150 Q 400 120 440 150 Q 400 180 360 150" fill="none" stroke="url(#grad2)" stroke-width="2" opacity="0.6"/>
  <path d="M 360 150 Q 400 180 440 150 Q 400 120 360 150" fill="none" stroke="url(#grad2)" stroke-width="2" opacity="0.6"/>
  
  <!-- Title -->
  <text x="400" y="320" font-family="Arial, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="#00d4ff">Bilingual Websites</text>
  <text x="400" y="350" font-family="Arial, sans-serif" font-size="18" text-anchor="middle" fill="#ffffff" opacity="0.8">English & Spanish</text>
